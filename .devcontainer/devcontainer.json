{
  "name": "deski-dev",
  "dockerComposeFile": [
    "../docker/environments/development/docker-compose.yml"
  ],
  "service": "backend",
  "workspaceFolder": "/app",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "postCreateCommand": "./.devcontainer/setup-env.sh && pip install --no-cache-dir -r requirements.txt",

  "remoteUser": "vscode",
  "mounts": [
    "source=chroma_data,target=/app/chroma_data,type=volume"
  ]
}
