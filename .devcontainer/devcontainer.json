{
  "name": "deski-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "backend",
  "workspaceFolder": "/app",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "postCreateCommand": "sudo chown -R vscode:vscode /app && sh /app/.devcontainer/setup-env.sh && pip install --no-cache-dir -r /app/requirements.txt",

  "remoteUser": "vscode"
}
